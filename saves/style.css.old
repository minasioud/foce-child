/* Animation move_bas avec keyframes */

@keyframes mouve_bas {
    0%   { opacity: 0; transform: translateY(-80px); }
    100% { opacity: 1; transform: translateY(0); }
}

@keyframes move_haut {
    0%   { transform: translateY(5vh); }
    100% { transform: translateY(0); }
}

@keyframes rotate_fleur {
    0%   { transform: rotate(0deg); }
    100% { transform: rotate(-360deg); }
}

/* Initialement invisible */
.banner {
    opacity: 0;
    transition: opacity 2s ease-out, transform 5s ease-out;
}

/* Devenir visible lors du défilement */
.banner.visible {
    opacity: 1;
    transform: translateY(0);
    animation: mouve_bas 1s ease-out forwards;
}

img.banner_logo {
    animation: move_haut 1s ease-out forwards; /* L'animation se joue au chargement de la page */
}

/* Suppression d'animation pour le texte dans story__article */
.story__article {
    position: relative; /* Nécessaire pour la gestion de la superposition */
}

.story__article::after {
    opacity: 1; /* Rendre l'image invisible au départ */
    animation: move_haut 1s ease-out forwards, rotate_fleur 3s linear infinite 1.5s;
}

/* Assurez-vous que le texte ne subit aucune animation */
.story__article p {
    animation: none; /* Désactive l'animation pour le texte de l'article */
}

.story h2::before,
.story h2::after,
.story #characters h3,
.story #characters,
.story #place h3,
#studio h2::before,
#studio h2::after,
#studio > div::before,
.site-footer {
    animation: move_haut 1s ease-out forwards; /* Animation pour ces éléments */
}

@keyframes bg_place_move_haut {
    0%   { transform: translateY(5vh); }
    100% { transform: translateY(0); }
}

.story #place {
    animation: bg_place_move_haut 1s ease-out forwards;
    position: relative; /* Nécessaire pour la gestion de la superposition */
}

/* Le texte reste fixe */
.story #place p {
    position: relative; /* Le texte ne subit aucune animation */
    z-index: 1; /* Assure que le texte est au-dessus de l'image si besoin */
    animation: none; /* Désactive toute animation sur le texte */
}

/* Remplacez l'ancienne règle pour le conteneur .story #place */
.story #place {
    position: relative; /* Nécessaire pour la gestion de la superposition */
}

